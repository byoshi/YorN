<Page
    x:Class="YorN.NewQuestionPage"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YorN"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Page.Resources>
 <Style TargetType="Hub">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="5"/>
            <Setter Property="Foreground" Value="White"/>
            
        </Style>
        <Style TargetType="HubSection">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="2"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
       

    </Page.Resources>
    
    
    <Hub  Header="YorN"  Background="#FF003559" >
        <HubSection  Width="auto" Header="New Question" >
          
        </HubSection>

        <HubSection  Width="auto" Header="Answer Questions" >

        </HubSection>
        <HubSection  Width="auto" Header="Your Questions">

        </HubSection>

    </Hub>
    
</Page>
    

